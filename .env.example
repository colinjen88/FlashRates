# Example environment for Goldlab.cloud (FlashRates)
# Copy to .env and fill in your own values.

# App
APP_NAME=Goldlab.cloud Aggregator
DEBUG=false

# Redis (optional; if unavailable the app falls back to FakeRedis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Auth (comma-separated)
API_KEYS=dev-key-1,dev-key-2
ADMIN_API_KEYS=admin-key-1

# Rate Limit
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_BURST=30

# History retention
HISTORY_RETENTION_HOURS=24
HISTORY_MAX_POINTS=10000

# Optional upstream API keys
BINANCE_API_KEY=
BINANCE_SECRET_KEY=
OANDA_API_KEY=
OANDA_ACCOUNT_ID=

# Proxy list (comma-separated)
PROXY_LIST=
